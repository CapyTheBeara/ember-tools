{
  "processors": [
    {
      "name": "es6-transpiler",
      "dirs": ["app"],
      "fileExt": "js"
    },
    {
      "name": "ember-template-compiler",
      "dirs": ["app/templates"],
      "fileExt": "hbs",
      "pipeTo": ["es6-transpiler"]
    },
    {
      "name": "css",
      "dirs": ["app/styles"],
      "fileExt": "css",
      "type": "reload"
    },
    {
      "name": "index.html",
      "dirs": ["app"],
      "fileExt": "html",
      "type": "reload"
    },
    {
      "name": "jshint",
      "dirs": ["app"],
      "fileExt": "js",
      "command": {
        "name": "jshint",
        "pathOnly": true,
        "noPipe": true
      }
    }
  ],

  "vendors": [
    "loader/loader.js",
    "jquery/dist/jquery.js",
    "handlebars/handlebars.js",
    "ember/ember.js",
    "ember-data/ember-data.js",
    "ember-cli-shims/app-shims.js",
    "ember-resolver/dist/modules/ember-resolver.js",
    "ember-load-initializers/ember-load-initializers.js"
  ]
}
